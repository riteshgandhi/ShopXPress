
  <div class="container py-5">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6 mx-auto">
            <!-- form card login -->
            <div class="card rounded-0">
              <div class="card-header">
                <h3 class="mb-0">{{title}}</h3>
              </div>
              <div class="card-body">
                <form action="/user/signin" class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                  <div class="form-group">
                    <label for="uname1">Username</label>
                    <input type="text" class="form-control form-control-lg rounded-0" name="userName" id="txtUserName" required="">
                    <div class="invalid-feedback">Oops, you missed this one.</div>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control form-control-lg rounded-0" name="password" id="txtPassword" required="" autocomplete="new-password">
                    <div class="invalid-feedback">Enter your password too!</div>
                  </div>
                  <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Login</button>
                  <p class="message">Not registered? <a href="/user/create">Create an account</a></p>
                </form>
              </div>
              <!--/card-block-->
            </div>
            <!-- /form card login -->

          </div>


        </div>
        <!--/row-->

      </div>
      <!--/col-->
    </div>
    <!--/row-->
  </div>
