<div class="row">
    {{#each productList}}
    <div class="col-sm-6 col-md-4">
        <div>
            <table>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <img src={{this.imagePath}} style="width:100px; height:80px">
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <br>
                        <table>
                            <tr>
                                <td style="text-align: center">{{applyNumberFormat this.productPrice}}</td>
                            </tr>
                            <tr>
                                <td>
                                    <table>
                                        <tr>
                                            <td style="text-align: right">Qty: <input type="number" name="quantity" 
                                                style="width:40%" value="1" min="1" step="1" id={{this.id}}
                                                max="{{this.productQuantity}}" 
                                                onblur="validateQuantity(this)">
                                            </td>
                                            <td>
                                                <a href="#" class="nav-link dropdown-item"  onclick="addToCart('{{this.id}}');">
                                                    <img src="/public/images/cart-full.png" title="Add to cart">
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <div class="caption">
                <h3>{{this.productName}}</h3>
                <p class="description">{{this.productDescription}}</p>
            </div>
            <hr>
        </div>
    </div>
    {{/each}}
</div>
